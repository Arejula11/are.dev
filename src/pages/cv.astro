---
import Mail from "@icons/Mail.astro";
import Download from "@icons/Download.astro";
import BasicLayout from "@layouts/BasicLayout.astro";
import Github from "@icons/Github.astro";
import Linkedin from "@icons/Linkedin.astro";
---

<BasicLayout>
  <article
    class="bg-white rounded-3xl shadow-2xl border border-zinc-200 w-full max-w-5xl mx-auto my-12 overflow-hidden transition-all"
  >
    <!-- Header -->
    <header
      class="p-10 border-b border-zinc-200 flex flex-col md:flex-row justify-between items-center gap-6 md:gap-0"
    >
      <div class="text-center md:text-left">
        <h1 class="text-4xl font-bold mb-2 text-zinc-800">Miguel Aréjula Aísa</h1>
        <p class="text-zinc-600 text-lg mb-4">
          Software Engineer & MSc Student in Software Engineering
        </p>
        <div class="flex justify-center md:justify-start gap-4 text-zinc-600">
          <a
            href="mailto:arejula10@gmail.com"
            class="hover:text-orange-500 transition-colors"
            title="Email"
            aria-label="Email"
          >
            <Mail />
          </a>
          <a
            rel="noopener noreferrer"
            href="https://www.linkedin.com/in/miguel-arejula-aisa-653088291"
            target="_blank"
            class="hover:text-orange-500 transition-colors"
            title="LinkedIn"
          >
            <Linkedin />
          </a>
          <a
            rel="noopener noreferrer"
            href="https://github.com/Arejula11"
            target="_blank"
            class="hover:text-orange-500 transition-colors"
            title="GitHub"
          >
            <Github />
          </a>
          <a
            href="/Miguel_Arejula_Aisa_CV.pdf"
            download="MiguelArejulaCV.pdf"
            class="hover:text-orange-500 transition-colors"
            title="Download CV"
          >
            <Download />
          </a>
        </div>
      </div>

      <img
        src="https://avatars.githubusercontent.com/u/92888725?v=4"
        alt="Miguel Aréjula Aísa"
        class="w-32 h-32 rounded-full border border-zinc-300 shadow-md"
      />
    </header>

    <!-- Content -->
    <section class="p-10 space-y-12 text-zinc-800 leading-relaxed">
      <!-- Experience -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-zinc-200 pb-2 mb-6">
          Experience
        </h2>
        <div class="transition-all p-4 rounded-xl shadow-sm hover:shadow-xl hover:-translate-y-1 ">
          <h3 class="text-xl font-bold text-zinc-700">
            Software Engineer — University of Zaragoza
          </h3>
          <p class="text-zinc-600 text-sm mb-2">
            Research Project TED2021-130449B-I00
          </p>
          <ul class="list-disc list-inside space-y-1 text-zinc-700">
            <li>
              Led development of a custom web application for the Traumatology Department (Hospital Clínico Lozano Blesa), from requirements gathering to delivery.
            </li>
            <li>
              Built a full-stack system using React, Express, FastAPI, and PostgreSQL; streamlined operations for ~50 patients/day.
            </li>
            <li>
              Designed and processed structured clinical data into relational models to enable formal clinical pathway validation.
            </li>
          </ul>
          <a
              href="https://are-dev.es/posts/tfg/"
              target="_blank"
              class="inline-block text-orange-500 hover:underline text-sm font-medium mt-2"
            >
              Read More
            </a>
        </div>
      </div>

      <!-- Education -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-zinc-200 pb-2 mb-6">
          Education
        </h2>
        <div class="space-y-6">
          <div class="shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all p-4 rounded-xl">
            <h3 class="text-lg font-semibold text-zinc-700">
              Master in Software Engineering — University of Southern Denmark
            </h3>
            <time datetime="2025-09">Sept 2025</time> – <time datetime="2027-06">June 2027</time>
            <p class="text-zinc-700 text-sm">
              Coursework: Advanced Software Engineering Methodologies, Advanced Software Architecture and Analysis Techniques, Big Data and Data Science Technology.
            </p>
          </div>
          <div class="shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all p-4 rounded-xl">
            <h3 class="text-lg font-semibold text-zinc-700">
              Bachelor in Software Engineering — University of Zaragoza
            </h3>
            <time datetime="2021-09">Sept 2021</time> – <time datetime="2025-06">June 2025</time>
            <p class="text-zinc-700 text-sm mb-1">
              Coursework: Software Engineering, Distributed Systems, Concurrent and Distributed Programming, Software Architecture, Requirements Engineering, Verification & Validation, Agile Methodologies, Software Quality, Software Engineering Laboratory.
            </p>
            <p class="text-zinc-700 text-sm">
              Achieved high honors in Information Systems II and Verification & Validation.
            </p>
          </div>
          <div class="shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all p-4 rounded-xl">
            <h3 class="text-lg font-semibold text-zinc-700">
              Cambridge English Advanced (C1)
            </h3>
            <time datetime="2024-07">July 2024</time>
          </div>
        </div>
      </div>

      <!-- Projects -->
      <div>
