---
// src/components/BentoItem.astro
const { title, description, coverImage, tags, author, authorImage, url } = Astro.props;
---

<div class="p-4 rounded-2xl shadow-md bg-white hover:shadow-lg transition">
  <a href={url} >
    {coverImage && <img src={coverImage} alt={title} class="rounded-lg mb-4 w-full h-[264px]" />}
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="text-sm text-zinc-600 mb-4">{description}</p>
    <div class="flex items-center gap-2 mb-4">
      {authorImage && <img src={authorImage} alt={author} class="w-10 h-10 rounded-full" />}
      <span class="text-sm font-medium">{author}</span>
    </div>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag: any) => (
        <span class="text-xs px-2 py-1 bg-zinc-200 rounded-full">{tag}</span>
      ))}
    </div>
  </a>
</div>
